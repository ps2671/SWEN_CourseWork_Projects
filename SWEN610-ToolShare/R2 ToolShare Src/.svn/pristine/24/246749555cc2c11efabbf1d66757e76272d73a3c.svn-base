{% extends "nav_bar.html" %}

{% block main_panel_template %}

<!-- Your Requests - Start -->

<div id="profile" class="container-fluid">
    <div class="row">
    <div class="col-sm-10"> 
    <div class="panel panel-primary" style="border-color: #34DDDD;">
        <div class="panel-heading" style="background-color: #34DDDD;">
            <div class="center-align" style="color: #000000;">
                <b>Your Requests Status</b>
            </div>
        </div>
        <div class="panel-body">
<div class="container-fluid">
    <!-- message if no tool were requested by user -->
    {% if toolRequest|length == 0%}
            <div class="center-align" style="color: #000000;">
<p> No tools have been requested. </p>
            </div>
{% else %}
<table class="table table-condensed">
    <thead>
            <tr>
              <th>Tool Image</th>
              <th>Tool Name</th>
              <th>Status </th>
            <th>Message</th>
            </tr>
</thead>
{% for object1 in toolRejected %}
                {% for object in toolsRegister %}
                    {% if object1.toolId_id == object.id %}
                         <input type="hidden" id="name_OfTheTool1" name="variable" value="{{ object.nameOfTheTool }}">
        <input type="hidden" id="address_OfTheTool1" name="variable" value="{{ object.addressOfTheTool }}">
        <input type="hidden" id="status_OfTheTool1" name="variable" value="{{ object.statusOfTheTool }}">
        <input type="hidden" id="category_OfTheTool1" name="variable" value="{{ object.categoryOfTheTool }}">
        <input type="hidden" id="image_Address1" name="variable" value="{{ object.image }}">
        <input type="hidden" id="requester_id1" name="variable" value="{{ object.requester_id }}">

<tbody>
  <tr>
                <td>
                    {% if object.image %}
                        <img src="{{object.image.url}}" class='img-res' height="100" width="100"/>
                    {% endif %}
                </td>
                <td><p onclick="rejectedToolsDetail()"><u>{{object.nameOfTheTool}}</u></p></td>
                <td><span>Rejected</span></td>
<!-- 
                <td><img src='../../static/firstApp/images/notAcceptedLogo.png' width="100" height="100" ></td> -->
                <td>Rejection message: " {{ object1.rejectionReason }}"</td>
            </tr>
</tbody>
       
                    {% endif %}
                {% endfor %}
{% endfor %}

            {% for object1 in toolBorrowed %}
                    {% for object in toolsRegister %}
                        {% if object1.toolId_id == object.id %}
    <input type="hidden" id="name_OfTheTool" name="variable" value="{{ object.nameOfTheTool }}">
        <input type="hidden" id="address_OfTheTool" name="variable" value="{{ object.addressOfTheTool }}">
        <input type="hidden" id="status_OfTheTool" name="variable" value="{{ object.statusOfTheTool }}">
        <input type="hidden" id="category_OfTheTool" name="variable" value="{{ object.categoryOfTheTool }}">
        <input type="hidden" id="image_Address" name="variable" value="{{ object.image }}">
        <input type="hidden" id="requester_id" name="variable" value="{{ object.requester_id }}">
<tbody>
  <tr>
    <td>
                    {% if object.image %}
                        <img src="{{object.image.url}}" class='img-res' height="100" width="100"/>
                    {% endif %}
    </td>
                <td><p onclick="acceptedToolsDetail()"><u>{{object.nameOfTheTool}}</u></p></td>
                <td><span>Approved</span></td>
               <!--  <td><img src='../../static/firstApp/images/acceptedLogo.png' width="100" height="100" ></td> -->
</tr>
</tbody>
        
        
            {% endif %}
                {% endfor %}
{% endfor %}
<!--To show pending status-->
    {% for object1 in toolRequest %}
                {% if object1.requestStatus == 0 %}
                    {% for object in toolsRegister %}
                        {% if object1.toolId_id == object.id %}
        <input type="hidden" id="name_OfTheTool1" name="variable" value="{{ object.nameOfTheTool }}">
        <input type="hidden" id="address_OfTheTool1" name="variable" value="{{ object.addressOfTheTool }}">
        <input type="hidden" id="status_OfTheTool1" name="variable" value="{{ object.statusOfTheTool }}">
        <input type="hidden" id="category_OfTheTool1" name="variable" value="{{ object.categoryOfTheTool }}">
        <input type="hidden" id="image_Address1" name="variable" value="{{ object.image }}">
        <input type="hidden" id="requester_id1" name="variable" value="{{ object.requester_id }}">

<tbody>
  <tr>
                <td>
                    {% if object.image %}
                        <img src="{{object.image.url}}" class='img-res' height="100" width="100"/>
                    {% endif %}
                </td>
                <td><p onclick="rejectedToolsDetail()"><u>{{object.nameOfTheTool}}</u></p></td>
                <td><span>Pending</span></td>
            </tr>
</tbody>

                    {% endif %}
                {% endfor %}
            {% endif %}
{% endfor %}
  {% endif %}
</table>
</div>
</div>
    </div>
</div>
</div>
</div>
<!-- Your Requests - End -->
</div>
</div>
{% endblock %}
